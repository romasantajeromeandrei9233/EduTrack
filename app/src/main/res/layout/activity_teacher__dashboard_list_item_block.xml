<?xml version="1.0" encoding="utf-8"?>
<!-- This XML defines the look of a single class item inside the RecyclerView on the dashboard. -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <!-- Left Accent Bar/Color (as seen in the reference photo) -->
        <View
            android:id="@+id/classColorBar"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@color/accent_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Class Grade and Name (e.g., Grade 3 Salagubang) -->
        <TextView
            android:id="@+id/tvClassTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Grade [X] Class Name"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/classColorBar"
            app:layout_constraintEnd_toStartOf="@id/ivArrow" />

        <!-- Student Count (e.g., 13 Students) -->
        <TextView
            android:id="@+id/tvStudentCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="[Y] Students"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvClassTitle"
            app:layout_constraintStart_toEndOf="@id/classColorBar"
            app:layout_constraintEnd_toStartOf="@id/ivArrow" />

        <!-- Arrow Icon (to indicate clickability) -->
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="Go to class details"
            app:tint="@color/icon_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>