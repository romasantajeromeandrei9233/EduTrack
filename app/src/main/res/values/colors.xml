<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CORE DEFINITIONS -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- ORANGE THEME HEX CODES -->
    <color name="primary_orange">#f58025</color>           <!-- Main Accent: CTA Base (Orange) -->
    <color name="primary_orange_dark">#ff7800</color>      <!-- Gradient End: Brighter Orange -->
    <color name="primary_light_peach">#ffe5b4</color>      <!-- Lightest background shade (Conceptual Orange) -->

    <!-- MAPPED NAMES (Strictly limited to Black, White, or Orange shades) -->

    <!-- Theme Compatibility Mappings -->
    <color name="primary">@color/primary_orange</color>
    <color name="primary_dark">@color/primary_orange_dark</color>
    <color name="primary_light">@color/primary_light_peach</color>

    <!-- Accent Mappings (Now Orange) -->
    <color name="accent_blue">@color/primary_orange_dark</color>
    <color name="accent_teal">@color/primary_orange</color>
    <color name="accent">@color/primary_orange</color>

    <!-- Background Mappings -->
    <color name="background_main">@color/primary_light_peach</color>
    <color name="card_background">@color/white</color>
    <color name="card_shadow">#10000000</color> <!-- Keeping shadow opacity for subtle elevation -->

    <!-- Text Mappings -->
    <color name="text_primary">@color/black</color>
    <color name="text_secondary">@color/primary_orange</color>
    <color name="text_tertiary">@color/primary_orange</color>

    <!-- Attendance Status Colors (Monochromatic Orange) -->
    <color name="status_present">@color/primary_orange</color>
    <color name="status_late">@color/primary_orange</color>
    <color name="status_absent">@color/primary_orange</color>
    <color name="status_excused">@color/primary_orange</color>

    <!-- Status Colors (Light backgrounds mapped to White/Light Peach) -->
    <color name="status_present_light">@color/white</color>
    <color name="status_late_light">@color/primary_light_peach</color>
    <color name="status_absent_light">@color/primary_light_peach</color>
    <color name="status_excused_light">@color/primary_light_peach</color>

    <!-- Additional UI Mappings -->
    <color name="divider">@color/primary_orange_dark</color>
    <color name="icon_gray">@color/primary_orange</color>
</resources>